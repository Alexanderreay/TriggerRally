
.credits-box
  background rgba(255, 255, 255, 0.7)
  position absolute
  top 1em
  right 1em
  border-radius 0.5em
  padding 0.2em 0.4em
  // text-shadow 0 0 0.1em white
  // color white

.ca-credit
  display inline-block
  background url('/images/ca-credit.png')
  background-repeat no-repeat
  background-size contain
  background-position center
  width 1em
  height 1em
  margin-bottom -0.15em

.purchaseplus
  display inline-block
  margin-left 0.1em
  text-align center

.purchaseplus a
.purchaseplus a:visited
  display inline-block
  background #140
  color white
  border-radius 0.2em
  width 0.8em
  height 0.8em
  position relative
  top 0.2em

.purchaseplus a:hover
.purchaseplus a:active
  background #684

.purchaseplus a span
  position relative
  top -0.25em

.purchasecredits input[type="radio"]
  font-size inherit
  width 0.8em
  height 0.8em

.purchasecredits input
  font-size inherit

.purchasecredits .paypal-logo
.purchasecredits input.checkout
  position absolute
  // width 1.11em * 3
  // height 0.69em * 3
  bottom 0.5em
  right 0.5em

.purchasecredits label
  border-radius 0.5em

.purchasecredits label:hover
  background #fff
