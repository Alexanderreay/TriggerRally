#checkpoints
  color #000
  position absolute
  top 0.5em
  left 1em
  font-size 2em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 2
#timer
  color #040
  position absolute
  top 0.5em
  right 1em
  font-size 2em
  -moz-transition -moz-transform 2s
  -moz-transform-origin top right
  -moz-transform scale(2)
  -webkit-transition -webkit-transform 2s
  -webkit-transform-origin top right
  -webkit-transform scale(2)
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 2
#timer.running
  color #000
  -moz-transform scale(1)
  -webkit-transform scale(1)
#speedo
  position absolute
  bottom 1em
  left 0
  font-size 1em
  color #040
  text-align center
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  // -webkit-transform scale(1)
  width 6em
  z-index 2

#countdown
  color #000
  position absolute
  top 1em
  left 0
  right 0
  font-size 3em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  text-align center
  z-index 2
  opacity 1

#countdown.fadeout
  transition all 0.5s ease-in 0.3s
  transform translateY(-0.7em)
  -moz-transition all 0.5s ease-in 0.3s
  -moz-transform translateY(-0.7em)
  -webkit-transition all 0.5s ease-in 0.3s
  -webkit-transform translateY(-0.7em)
  opacity 0

#twitterlink
  display none
  position absolute
  top 8em
  right 5em
  font-size 1em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 3

#twitterlink.visible
  display block
  position absolute
