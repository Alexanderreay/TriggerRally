menu
  position absolute
  width 100%
  height 100%
  background rgba(255,0,0,0.2)
  z-index 2
  font-size 1em
  text-shadow 0 0 0.5em white
  // -webkit-perspective 100px
  margin auto
  padding 1em 3em
  // text-align center

menu li
  list-style none
  padding 0.5em
  padding-left 2em
  margin 0.5em
  box-shadow 0 0 0.5em white
  background rgba(255, 255, 255, 0.5)
  border-radius 0.5em
  opacity 0.8
  -webkit-transform scale(1)
  transition -webkit-transform 0.2s

menu li:hover
  //font-weight bold
  //background white
  //opacity 1
  -webkit-transform scale(1.05)

