
@import common

body
  background #dec
  color #000
  padding 0
  margin 0
  font-family "Ubuntu", sans-serif
  font-size 0.8em
  overflow hidden
  text-shadow 0 1px 0 #fff



.field
  background rgba(255,255,255,0.4)
  margin 0.5em 0

.field :nth-child(1)
  float left

.field :nth-child(2)
  float right

.field .end
  background rgba(0,0,0,0.2)
  clear both
  height 1px

input[type="range"]
  width 60%

input:checked + label
  color #800

#editor-toolbox
  box-shadow 0 0 40px black
  display none  // Hide until JavaScript shows it
  overflow-x hidden
  overflow-y auto
  z-index 2

