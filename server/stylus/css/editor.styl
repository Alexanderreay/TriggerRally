
@import common

body
  background #dec
  color #000
  padding 0
  margin 0
  font-family "Ubuntu", sans-serif
  font-size 0.8em
  text-shadow 0 1px 0 #fff


.no-close .ui-dialog-titlebar-close
  display: none


/* Fix for accordion toggle arrows in JQuery UI theme. */
.ui-accordion h3
  padding-left 2em

.field
  background rgba(255,255,255,0.4)
  margin 0.5em 0

.field :nth-child(1)
  float left

.field :nth-child(2)
  float right

.field .end
  background rgba(0,0,0,0.2)
  clear both
  height 1px

.tool-slider
  width 60%

#editor-toolbox
  overflow hidden

.user img
  width 20px
  height 20px
  margin-right 5px
  vertical-align -20%

