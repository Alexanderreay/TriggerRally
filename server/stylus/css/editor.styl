
@import common

body
  background #888
  padding 0
  margin 0
  font-family "Ubuntu", sans-serif
  //font-size 0.8em
  overflow hidden
  -moz-user-select none
  -webkit-user-select none
  user-select none

h2
  display inline

input[type="range"]
  width 60%

input:checked + label
  color #e77

#editor-statusbar,
#editor-inspector
  background #fda
  box-shadow 0 0 10px black
  position absolute

#editor-statusbar
  width 100%
  z-index 2

#editor-statusbar > table
  border-spacing 0
  width 100%

#editor-statusbar > table td
  width 33.3%

#editor-statusbar > table td:nth-child(2)
  text-align center

#editor-statusbar > table td:last-child
  text-align right

#editor-inspector
  z-index 3
  left 10px
  top 50px
  border-radius 4px
  padding 10px
  width 250px

#editor-inspector h3
  margin 0

#editor-inspector .attrib
  display none

#editor-inspector .attrib.visible
  display block

#editor-inspector .attrib .label
  position relative

#editor-inspector .attrib .content
  position absolute
  left 100px
  width 150px

.tooltip
  border-bottom 1px dotted #333
  position relative

.tooltip .tooltip-text
  display none
  position absolute
  opacity 0.95
  left 2em
  top 1em
  background #ee9
  font-size 80%
  padding 0 12px
  border 1px solid #440
  color black
  border-radius 4px
  width 300px
  z-index 3

.tooltip:hover .tooltip-text
  display inline-block


menu
  background rgba(255,255,255,0.8)
  cursor pointer
  margin 0
  padding 0
  position relative

menu li
  list-style none
  padding 0.5em

menu li:hover
  background white

menu menu
  display none
  position absolute

menu li:hover > menu
  display block

