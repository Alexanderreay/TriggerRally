
@import common

body
  background #888
  padding 0
  margin 0
  font-family "Ubuntu", sans-serif
  //font-size 0.8em
  -moz-user-select none
  -webkit-user-select none
  user-select none

  // Disable scrolling
  overflow hidden
  position fixed
  width 100%

h2
  display inline

input[type="range"]
  width 60%

input:checked + label
  color #e77

#statusbar,
#editor-inspector,
#editor-helpbox,
.close-tab
  background #fda
  box-shadow 0 0 10px black
  position absolute

