// Stuff for drive mode

.frame3d
  box-shadow 0 0 15px #000
  position relative
  width 940px
  height 529px

canvas
  //position absolute
  pointer-events none
  //z-index 0

.frame3d .loading
  width: 100%
  height: 100%
  position: absolute
  z-index: 1
  text-align: center
  pointer-events: none

.frame3d .loading h1,
.frame3d .loading h2 {
  margin: 0; padding: 0;
  text-shadow: 0 0 0.1em #fff, 0 0 0.4em #fff;
  -webkit-transition: opacity 0.5s;
}
.frame3d .loading h1 {
  font-size: 6em;
}
.frame3d .loading h2 {
  font-size: 3em;
}
.frame3d .loading.loaded h2,
.frame3d .loading.loaded h1 {
  opacity: 0;
}

#checkpoints {
  color: #000;
  position: absolute;
  top: 1em;
  left: 2em;
  font-size: 3em;
  text-shadow: 0 0 0.1em #fff, 0 0 0.4em #fff;
  z-index: 2;
}
#timer {
  color: #040;
  position: absolute;
  top: 1em;
  right: 3em;
  font-size: 3em;
  -webkit-transition: -webkit-transform 2s;
  -webkit-transform: scale(2);
  text-shadow: 0 0 0.1em #fff, 0 0 0.4em #fff;
  z-index: 2;
}
#timer.running
  color #000
  -webkit-transform scale(1)

#countdown
  color #000
  position absolute
  top 1em
  left 0
  right 0
  font-size 8em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  text-align center
  z-index 2
  opacity 1
  -webkit-transition opacity 1s

#countdown.fadeout
  opacity 0

#twitterlink {
  display: none;
  position: absolute;
  top: 8em;
  right: 5em;
  font-size: 1em;
  text-shadow: 0 0 0.1em #fff, 0 0 0.4em #fff;
  z-index: 3;
}
#twitterlink.visible {
  display: block;
  position: absolute;
}
