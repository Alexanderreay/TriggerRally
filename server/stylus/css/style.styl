dl
  margin 0.2em 0
dt
  float left
  //margin-top 5px
  opacity 0.6
  width 160px

.note
  font-size 80%
  opacity 0.6

table.list tr
  background #eee
table.list tr:first-child
  background #ddd
table.list td
  padding 0 20px

td.highlight
  background #efe

//.footer
//  opacity 0.3

.logo
  width 64px
  height 64px
  margin-right 1em

h1, h2
  font-family 'Ubuntu', sans-serif
  font-style italic
  font-weight bold
  margin 0

.featured
  text-align justify

.featured:after
  content ""
  display inline-block
  width 100%

.featured a
  display inline-block
  background-color #bda
  background-repeat no-repeat
  background-position center center
  background-size cover
  border-radius 0.5em
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #361
  //margin 1em
  width 300px
  height 180px
  position relative

.featured a .label
  bottom 0.4em
  color white
  text-shadow none
  font-size 3em
  position absolute
  right 0.1em
  -moz-transform rotate(-20deg)
  -webkit-transform rotate(-20deg)
  transform rotate(-20deg)

.featured a:hover .label
  text-shadow 0 0 0.2em #fff

.button
  display inline-block
  background #bda
  background linear-gradient(-90deg, #bda, #ceb)
  background -webkit-linear-gradient(-90deg, #bda, #ceb)
  border-radius 0.5em
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #361
  margin 1em
  padding 0.8em 1.5em

a.disabled .button
  background #ccc
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #333

.button.special
  background linear-gradient(-90deg, #be9, #cfa)
  background -webkit-linear-gradient(-90deg, #be9, #cfa)

.button img
  margin-right 15px
  vertical-align -40%

.twitterfeeds
  text-shadow none

CARDSCALE = 5
.card
  background #ddd
  border-radius CARDSCALE * 3.18px
  box-shadow 
  display inline-block
  width CARDSCALE * 85.6px
  height CARDSCALE * 53.98px

.footer img.logo
  float left

.clearboth
  clear both

#replays a
  background #fda
  display block
  -webkit-transition background-color 1s

#replays a.highlight
  background #f80

textarea
  font-family monospace

// Stuff for drive mode

.frame3d
  box-shadow 0 0 15px #000
  position relative
  width 940px
  height 529px

canvas
  //position absolute
  pointer-events none
  //z-index 0

.frame3d .loading
  width 100%
  height 100%
  position absolute
  z-index 1
  text-align center
  pointer-events none

.frame3d .loading h1,
.frame3d .loading h2
  margin 0
  padding 0
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  -webkit-transition opacity 0.5s

.frame3d .loading h1
  font-size 6em

.frame3d .loading h2
  font-size 3em

.frame3d .loading.loaded h2,
.frame3d .loading.loaded h1
  opacity 0


#checkpoints
  color #000
  position absolute
  top 1em
  left 2em
  font-size 3em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 2
#timer
  color #040
  position absolute
  top 1em
  right 3em
  font-size 3em
  -webkit-transition -webkit-transform 2s
  -webkit-transform scale(2)
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 2
#timer.running
  color #000
  -webkit-transform scale(1)
#speedo
  position absolute
  bottom 1em
  left 1em
  font-size 2em
  color #040
  text-align center
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  -webkit-transform scale(1)
  width 6em
  z-index 2

#countdown
  color #000
  position absolute
  top 1em
  left 0
  right 0
  font-size 8em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  text-align center
  z-index 2
  opacity 1
  -webkit-transition opacity 1s

#countdown.fadeout
  opacity 0

#twitterlink
  display none
  position absolute
  top 8em
  right 5em
  font-size 1em
  text-shadow 0 0 0.1em #fff, 0 0 0.4em #fff
  z-index 3

#twitterlink.visible
  display block
  position absolute

img.inline
  width 20px
  height 20px
  margin-right 5px
  vertical-align -20%
