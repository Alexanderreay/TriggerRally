.gui-container
  extraClass = editable ? "user-owned" : ""
  div(class="profile-card #{extraClass}")
    img.profile(src=pic_src)
    span &nbsp;
    h1
      div #{title}&nbsp;
    span &nbsp;
    //- .category Provisional 
    //-   a.route(href="/ignition") (Upgrade)
    //- span &nbsp;
    .user-id= id
    span &nbsp;
    .user-name= name
    span &nbsp;
    .user-name-error
    span &nbsp;
    .issued Issued: #{issueDate}
    span &nbsp;
    .badges
      .label Endorsements
      each badge in badges
        a.route(href=badge.href)
          img(src=badge.img_src, title=badge.img_title)
          //- object(data=badge.img_src)
