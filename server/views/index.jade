extends layout

block body
  include partial/header

  .content

    p Fast arcade rally racing action!

    if recentTracks
      .section Latest published tracks
      include partial/recent

      p
        | See 
        a(href="/recenttracks") more tracks
        |  or make your own with the 
        a(href="/track/v3-base-1/edit") editor
        | .

      p To include a track in this list, check the <em>"Publish this track"</em> option in the editor.

    .section Previous versions

    table
      tr
        td
          a(href="/x/Alpina/ArbusuG/drive")
            img(width="300", height="169", src="/images/screen3.jpg", alt="Screenshot of Trigger Rally v2")
        td
          a.button(href="/x/Alpina/ArbusuG/drive") Play Version 2

      tr
        td
          a(href="/x/Preview/Arbusu/drive")
            img(width="300", height="210", src="/images/screen1.jpg", alt="Screenshot of v1")
        td
          a.button(href="/x/Preview/Arbusu/drive") Play Version 1

    .section Blog 
      a(href="//blog.triggerrally.com/") (more here)
    script(src="//blog.triggerrally.com/js")

    .section News
    .twitterfeeds
      <script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
      script
        new TWTR.Widget({
          version: 2,
          type: 'search',
          search: 'TriggerRally',
          interval: 10000,
          title: 'What people are saying about',
          subject: 'TriggerRally',
          width: 940,
          height: 310,
          theme: {
            shell: {
              background: '#496b35',
              color: '#ffffff'
            },
            tweets: {
              background: '#000000',
              color: '#ffffff',
              links: '#4aed05'
            }
          },
          features: {
            scrollbar: true,
            loop: false,
            live: true,
            behavior: 'default'
          }
        }).render().start();

    include partial/footer
