extends layout-editor

block body
  #editor-statusbar
    table
      tr
        td
          h2
            a(href="/") Trigger Rally&nbsp;
        //td
          menu
            li Menu
              menu(type="list")
                li Hello
                li Goodbye
        td
          span Status:&nbsp;
          span#status Loading
        td
          .userinfo
            - if (user)
              include partial/user
              span &nbsp;&mdash;&nbsp;
              a(href='/logout') Log Out&nbsp;
            - else//- if (login)
              span
                a(href="/login")<strong>Log in</strong>&nbsp;

  #editor-inspector
    //-h3 Property inspector
    .attrib#sel-type
      span.label Selection:
      span.content

    .attrib#title
      span.label Name:
      input.content(type="text")

    .attrib#disp-radius
      span.tooltip T width:
        div.tooltip-text
          h4 Track width
          p Controls the width of the track embankment or ditch.
          p: em Tip: use Shift to raise or lower track checkpoints.
      input.content(type="range", min=0, max=80, step="any")

    .attrib#disp-hardness
      span.tooltip T shape:
        div.tooltip-text
          h4 Track shape
          p Controls the shape of the track embankment or ditch.
          p High values give a squarer profile, low values a more
            | curved profile.
      input.content(type="range", min=0, max=1, step="any")

    .attrib#disp-strength
      span.tooltip T strength:
        div.tooltip-text
          h4 Track strength
          p Controls the degree to which the track overrides
           | the shape of the underlying terrain, creating an
           | embankment or ditch.
      input.content(type="range", min=0, max=1, step="any")

    .attrib#surf-radius
      span.tooltip D width:
        div.tooltip-text
          h4 Dirt width
          p Controls the width of the dirt area along the track.
          p Dirt is smoother than other kinds of terrain,
            | making it easier to drive, and trees are removed from this area.
      input.content(type="range", min=0, max=80, step="any")

    .attrib#surf-hardness
      span.tooltip D sharp:
        div.tooltip-text
          h4 Dirt sharpness
          p Controls how quickly the edges of the track transition from
            | dirt to moss/rock.
      input.content(type="range", min=0, max=1, step="any")

    .attrib#surf-strength
      span.tooltip D amount:
        div.tooltip-text
          h4 Dirt amount
          p Controls the quantity of dirt on the track.
      input.content(type="range", min=0, max=1, step="any")

    .attrib#cmd-copy
      hr
      span.label Action
      button.content Copy

    .attrib#cmd-delete
      hr
      span.label Action
      button.content Delete

  #view3d

  script(src="/socket.io/socket.io.js")

  script
    var TRIGGER = {
      TRACK: !{JSON.stringify(trackData)}
    };

  script(data-main="/scripts/editor/editor-main", src="/js/require.js")
